{
  "version": "0.2.0",
  "configurations": [
    {
      "configurations": [
        {
          "type": "debugpy",
          "request": "launch",
          "name": "Launch Django App",
          "program": "${workspaceFolder}/manage.py",
          "args": [
            "runserver"
          ],
          "django": true,
          "justMyCode": true
        }
      ],
      "inputs": [
        {
          "type": "promptString",
          "id": "programPath",
          "description": "Path to the program"
        }
      ]
    },
    {
      "name": "Python Debugger: Python File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}"
    }
  ]
}